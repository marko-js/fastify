{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["dom", "es2019", "scripthost"],
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "target": "es2019",
    "declaration": true,
    "stripInternal": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}
